{
    "name": "webinterface",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build:tailwind": "npx tailwindcss -i ./static/scss/styles.scss -o ./static/css/output.css",
        "build:sass": "sass ./static/scss/:./static/css/",
        "build": "npm run build:sass && npm run build:tailwind",
        "dev:tailwind": "npx tailwindcss -i ./static/scss/styles.scss -o ./static/css/output.css --watch",
        "dev:sass": "sass --watch ./static/scss/:./static/css/",
        "build_dev": "npm-run-all --parallel dev:*"
    },
    "dependencies": {
        "tailwindcss": "^3.3.0",
        "sass": "^1.62.1",
        "postcss": "^8.4.21",
        "autoprefixer": "^10.4.14",
        "npm-run-all": "^4.1.5"
    },
    "keywords": [],
    "author": "",
    "license": "ISC"
}
